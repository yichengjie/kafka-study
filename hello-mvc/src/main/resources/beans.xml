<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="helloService" class="com.yicj.study.mvc.service.impl.HelloServiceImpl">
        <replaced-method name="hello" replacer="helloMethodReplacer" />
    </bean>

    <bean id="helloMethodReplacer"  class="com.yicj.study.mvc.methodreplacer.HelloMethodReplacer" />
</beans>